<?xml version="1.0" encoding="utf-8"?>
<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:reader="com.qiaobutang.talk.reader.*"
	layout="vertical"
	paddingTop="0"
	paddingLeft="0"
	paddingRight="0"
	paddingBottom="0"
	applicationComplete="init_app()"
	>
	
	<mx:Script source="reader.as"></mx:Script>
	
	
	<mx:ApplicationControlBar width="100%" id="app_bar">
		<mx:Image source="@Embed(source='resources/logo.png')"
			id="logo_img"
			click="logo_img_click()"
			useHandCursor="true"
			buttonMode="true"
			/>
			
			
		<mx:Spacer width="100%"></mx:Spacer>
		
		
		<mx:Button
			id="big_btn"
			label=""
			icon="@Embed(source='resources/big_icon.png')"
			paddingLeft="0"
			paddingRight="0"
			toolTip="放大"
			width="24"
			height="24"
			click="scale_content(10)"
			buttonMode="true"
			/>
		<mx:Button
			id="small_btn"
			label=""
			icon="@Embed(source='resources/small_icon.png')"
			paddingLeft="0"
			paddingRight="0"
			toolTip="缩小"
			width="24"
			height="24"
			click="scale_content(-10)"
			buttonMode="true"
			/>
			
		<mx:VRule
			height="16"
			strokeColor="{border_color}"
			/>
		
		<mx:Button
			id="fullscreen_btn"
			label=""
			icon="@Embed(source='resources/fullscreen_icon.gif')"
			paddingLeft="0"
			paddingRight="0"
			toolTip="全屏阅读"
			width="24"
			height="24"
			click="toggle_fullscreen()"
			buttonMode="true"
			/>
		<mx:Button
			id="normal_btn"
			visible="false"
			includeInLayout="false"
			label=""
			icon="@Embed(source='resources/normal_icon.gif')"
			paddingLeft="0"
			paddingRight="0"
			toolTip="退出全屏"
			width="24"
			height="24"
			click="toggle_fullscreen()"
			buttonMode="true"
			/>
		
	</mx:ApplicationControlBar>
	
	
	<reader:ReaderContentCanvas
		width="100%"
		height="100%"
		id="content_container"
		borderColor="{border_color}"
		borderStyle="outset"
		>
		
		<mx:TextArea
			id="content"
			horizontalCenter="0"
			paddingTop="20"
			paddingLeft="50"
			paddingRight="50"
			verticalScrollPolicy="off"
			horizontalScrollPolicy="off"
			editable="false"
			selectable="false"
			enabled="true"
			wordWrap="true"
			displayAsPassword="false"
			borderThickness="0"
			>
		
		</mx:TextArea>
		
	</reader:ReaderContentCanvas>
	
</mx:Application>
