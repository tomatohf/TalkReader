<?xml version="1.0" encoding="utf-8"?>
<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:reader_container="com.qiaobutang.talk.reader.container.*"
	xmlns:reader_control="com.qiaobutang.talk.reader.control.*"
	layout="vertical"
	paddingTop="0"
	paddingLeft="0"
	paddingRight="0"
	paddingBottom="0"
	backgroundColor="#B2B2B2"
	applicationComplete="init_app()"
	>
	
	<mx:Script source="reader.as"></mx:Script>
	
	<mx:Style>
		.windowStyles {
			fontSize: 13px;
		}
		
		TitleWindow {
			fontSize: 13px;
		}
		
		ToolTip, .errorTip {
			fontSize: 13px;
			cornerRadius: 5;
		}
		
		.errorTip {
			borderColor: #FFFDC0;
			color: #333333;
			fontWeight: normal;
			paddingTop: 0px;
			paddingBottom: 0px;
			
		}
	</mx:Style>
	
	<mx:XML id="info_menu_provider">
		<root>
			<item label="查看更多" icon="more_icon" />
			<item label="我要评论" icon="comment_icon" />
			
			<item type="separator" />
			
			<item label="获取嵌入代码" icon="embed_icon" />
			
			<item type="separator" />
			
			<item label="帮助" icon="help_icon" />
			<item label="关于" icon="about_icon" />
		</root>
	</mx:XML>
	
	<mx:RemoteObject
		id="talk_show_service"
		destination="TalkShowService"
		endpoint="/weborb"
		result="on_got_content(event);"
		fault="on_fault(event);"
		/>
	
	
	<mx:ApplicationControlBar width="100%" id="app_bar">
		<mx:Image source="{image_base_url + 'reader_logo.png'}"
			id="logo_img"
			toolTip="乔布堂 周三访谈录"
			click="logo_img_click()"
			useHandCursor="true"
			buttonMode="true"
			/>
			
			
		<mx:Spacer width="100%"></mx:Spacer>
		
		
		<mx:VBox horizontalAlign="right" verticalGap="1">
		
			<mx:HBox id="toolbar_1" horizontalGap="{toolbar_gap}">
				<mx:Button
					label=""
					icon="{about_icon}"
					paddingLeft="0"
					paddingRight="0"
					toolTip="关于乔布堂周三访谈录"
					width="24"
					height="24"
					click="handle_about();"
					buttonMode="true"
					/>
					
				<mx:Button
					label=""
					icon="{help_icon}"
					paddingLeft="0"
					paddingRight="0"
					toolTip="帮助信息"
					width="24"
					height="24"
					click="handle_help();"
					buttonMode="true"
					/>
					
				<mx:Button
					label=""
					icon="{embed_icon}"
					paddingLeft="0"
					paddingRight="0"
					toolTip="获取嵌入代码"
					width="24"
					height="24"
					click="handle_embed();"
					buttonMode="true"
					/>
					
				<mx:Button
					label=""
					icon="{more_icon}"
					paddingLeft="0"
					paddingRight="0"
					toolTip="查看更多"
					width="24"
					height="24"
					click="handle_more();"
					buttonMode="true"
					/>
				
				<mx:Button
					label=""
					icon="{comment_icon}"
					paddingLeft="0"
					paddingRight="0"
					toolTip="我要评论"
					width="24"
					height="24"
					click="handle_comment();"
					buttonMode="true"
					/>
			</mx:HBox>
			
			
			<mx:HBox id="toolbar_2" horizontalGap="{toolbar_gap}">
				<mx:Label
					id="view_count_label"
					fontSize="12"
					paddingTop="5"
					paddingBottom="0"
					/>
				
				<mx:Button
					id="big_btn"
					label=""
					icon="@Embed(source='resources/big_icon.png')"
					paddingLeft="0"
					paddingRight="0"
					toolTip="放大"
					width="24"
					height="24"
					click="scale_content(10)"
					buttonMode="true"
					/>
					
				<mx:Button
					id="small_btn"
					label=""
					icon="@Embed(source='resources/small_icon.png')"
					paddingLeft="0"
					paddingRight="0"
					toolTip="缩小"
					width="24"
					height="24"
					click="scale_content(-10)"
					buttonMode="true"
					/>
					
				<mx:Button
					label=""
					icon="@Embed(source='resources/search_icon.gif')"
					paddingLeft="0"
					paddingRight="0"
					toolTip="搜索"
					width="24"
					height="24"
					click="toggle_search_panel()"
					buttonMode="true"
					/>
				
				<mx:Button
					id="fullscreen_btn"
					label=""
					icon="@Embed(source='resources/fullscreen_icon.gif')"
					paddingLeft="0"
					paddingRight="0"
					toolTip="全屏阅读"
					width="24"
					height="24"
					click="safely_toggle_fullscreen(go_back_home)"
					buttonMode="true"
					/>
				<mx:Button
					id="normal_btn"
					label=""
					icon="@Embed(source='resources/normal_icon.gif')"
					paddingLeft="0"
					paddingRight="0"
					toolTip="退出全屏"
					width="24"
					height="24"
					click="safely_toggle_fullscreen(go_back_home)"
					buttonMode="true"
					/>
			</mx:HBox>
				
		</mx:VBox>
		
	</mx:ApplicationControlBar>
	
	
	<reader_container:ReaderContentCanvas
		width="100%"
		height="100%"
		verticalScrollPolicy="on"
		id="content_container"
		borderColor="#888888"
		borderStyle="outset"
		doubleClickEnabled="true"
		>
		
		<mx:TextArea
			id="content"
			horizontalCenter="0"
			paddingTop="10"
			paddingBottom="20"
			paddingLeft="30"
			paddingRight="30"
			fontSize="14"
			leading="10"
			verticalScrollPolicy="off"
			horizontalScrollPolicy="off"
			editable="false"
			selectable="false"
			enabled="true"
			wordWrap="true"
			displayAsPassword="false"
			borderThickness="0"
			>
		
		</mx:TextArea>
		
	</reader_container:ReaderContentCanvas>
	
	
	<mx:ControlBar
		id="search_panel"
		includeInLayout="false"
		visible="false"
		width="100%"
		horizontalGap="1"
		paddingTop="0"
		paddingBottom="4"
		>
		
		<mx:Image source="{image_base_url + 'close_icon.gif'}"
			click="toggle_search_panel()"
			toolTip="关闭"
			useHandCursor="true"
			buttonMode="true"
			/>
			
		<mx:Spacer width="5"></mx:Spacer>
		
		<mx:Label text="搜索:" fontSize="12" paddingTop="1" />
			
		<reader_control:PromptingTextInput
			id="search_box"
			width="75"
			prompt="要搜索的内容"
			enter="search_next()"
			/>
			
		<mx:Spacer width="3"></mx:Spacer>
		
		<mx:Button
			label="下一个"
			toolTip="搜索下一个"
			click="search_next()"
			paddingLeft="0"
			paddingRight="0"
			buttonMode="true"
			/>
		<mx:Button
			label="上一个"
			toolTip="搜索上一个"
			click="search_pre()"
			paddingLeft="0"
			paddingRight="0"
			buttonMode="true"
			/>
			
		<mx:Spacer width="3"></mx:Spacer>
		
		<mx:VRule
			height="16"
			strokeColor="#808080"
			/>
		
		<mx:Spacer width="3"></mx:Spacer>
		
		<mx:Button
			toggle="true"
			id="toggle_highlight_all_btn"
			label="高亮全部"
			toolTip="高亮全部搜索到的结果"
			click="toggle_highlight_all()"
			paddingLeft="5"
			paddingRight="5"
			buttonMode="true"
			/>
		
	</mx:ControlBar>
	
	
	<mx:ControlBar
		id="info_panel"
		includeInLayout="true"
		visible="true"
		width="100%"
		horizontalGap="1"
		paddingTop="0"
		paddingBottom="0"
		horizontalAlign="right"
		>
		
		<mx:HBox
			id="bottom_ad"
			paddingTop="0"
			paddingBottom="0"
			horizontalGap="1"
			showEffect="WipeDown"
			hideEffect="WipeDown"
			mouseOver="stop_bottom_ads_interval()"
			mouseOut="start_bottom_ads_interval()"
			visible="false"
			>
			
			<mx:Image
				id="bottom_ad_icon"
				/>
			
			<reader_control:Link
				id="bottom_ad_link"
				label=" "
				click="on_bottom_ad_click()"
				fontSize="12"
				fontWeight="normal"
				paddingTop="0"
				paddingBottom="0"
				paddingLeft="2"
				/>
				
		</mx:HBox>
		
	</mx:ControlBar>
	
</mx:Application>
